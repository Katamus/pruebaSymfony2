{% extends 'layouts/master.html.twig' %}

{% block body %}
    <div class="form-group">
        <label for="tareas">Tareas: </label>
        <input id="tareas"  >
        <button type="button" class="btn btn-primary" onclick="consultaporboton()">Consultar</button>
    </div>
    <div class="container" >
        <div class='row' >
            <div class='col-sm' >
                <a class="btn btn-primary" href="{{ path('tareasCrear') }}" role="button">Crear</a>
            </div>
        </div>
    </div>
    <br/><br/>
    <input type="hidden" name="urlConsulta" id="urlConsulta"  value="{{ path('tareasConsultar') }}"/>
    <input type="hidden" name="urleditar" id="urleditar"  value="{{ path('tareasEditar') }}"/>
    <input type="hidden" name="urleliminar" id="urleliminar"  value="{{ path('tareasEliminar') }}"/>
    <input type="hidden" name="urlConsultarNombres" id="urlConsultarNombres"  value="{{ path('tareasConsulatarNombres') }}"/>

    <div class="container" >
        <div class='row' id="contenidoPagina">
        </div>
    </div>



    <script type="text/html" id="script-card">
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">Card title</h5>
                <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                <a href="#" class="card-link">Modificar Tarea</a>
                <a href="#" class="card-link">Terminar Tarea</a>
            </div>
        </div>
    </script>

{% endblock %}
{% block bodyjs %}
    <script src="{{ asset('js/ajaxConsulta.js') }}"></script>
{% endblock %}
